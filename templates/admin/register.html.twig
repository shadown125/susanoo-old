{% extends 'base.html.twig' %}

{% block main %}
    <div class="wrapper-sus-main">
        <div class="main-navigation-container">
            {{ include('admin/twigBlocks/main-navigation.html.twig') }}
        </div>
        <div class="content">
            <section class="section register">
                <div class="box-big">
                    <form action="#" class="form" method="post">
                        <div>
                            <label for="name">Name:</label>
                            <input type="text" class="input name" name="name" id="name">
                        </div>
                        <div>
                            <label for="last-name">Last name:</label>
                            <input type="text" class="input last-name" name="last-name" id="last-name">
                        </div>
                        <div>
                            <label for="email">E-mail:</label>
                            <input type="email" class="input email" name="email" id="email">
                        </div>
                        <div>
                            <label for="password">Password:</label>
                            <input type="password" class="input password" name="password" id="password">
                        </div>
                        <div>
                            <label for="confirm-password">Confirm password:</label>
                            <input type="password" class="input confirm-password" name="confirm-password" id="confirm-password">
                        </div>
                        <div>
                            <button type="submit" class="button">Create User</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer class="page-footer">

    </footer>
{% endblock %}